                                                    <ControlTemplate>
                                                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                            <Image Source="Images/down.png" Height="20"  ></Image>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
