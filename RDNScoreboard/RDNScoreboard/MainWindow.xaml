                                    <StackPanel Grid.Row="4" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock x:Name="LineUpClockLbl"  Style="{StaticResource BoldLargeScoreController}"></TextBlock>
                                        <TextBox x:Name="editLineUpClockText" GotFocus="editLineUpClockText_GotFocus" GotMouseCapture="editLineUpClockText_GotMouseCapture" Style="{StaticResource BoldLargeScoreTextBox}" MaxLength="5" Visibility="Collapsed"  LostFocus="editLineUpClockText_LostFocus" PreviewKeyUp="editLineUpClockText_PreviewKeyUp" PreviewKeyDown="editLineUpClockText_PreviewKeyDown"  ></TextBox>
                                        <StackPanel Orientation="Vertical" Width="20" HorizontalAlignment="Right" Visibility="Collapsed" x:Name="editModeLineUpTime" >
                                            <Button x:Name="upLineUpTime" Click="upLineUpTime_Click">
                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                            <Image Source="Images/up.png" Height="20" ></Image>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Button x:Name="downLineUpTime" Click="downLineUpTime_Click">
                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                            <Image Source="Images/down.png" Height="20"  ></Image>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>

                                    <TextBlock Text="Time Out" Grid.Row="5" Grid.Column="0" x:Name="TimeOutName" Style="{StaticResource BoldTitlesScoreController}"></TextBlock>
                                    <!--<Label Content="1" Grid.Row="5" Grid.Column="1"></Label>-->

                                    <TextBlock Grid.Row="5" Grid.Column="2" x:Name="TimeOutClockLbl"  Style="{StaticResource BoldLargeScoreController}"></TextBlock>


                                    <!--<Label Content="0" Grid.Row="6" Grid.Column="1"></Label>-->
                                    <StackPanel Grid.Row="6" Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="Intermission" x:Name="IntermissionLbl"  Style="{StaticResource BoldTitlesScoreController}"></TextBlock>
                                        <TextBox x:Name="editIntermissionName" TextChanged="editIntermissionName_TextChanged" IsKeyboardFocusedChanged="editIntermissionName_IsKeyboardFocusedChanged" Style="{StaticResource BoldLargeTextBox}" Visibility="Collapsed"   ></TextBox>
                                    </StackPanel>


                                    <StackPanel Grid.Row="6" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock x:Name="IntermissionClockLbl"  Style="{StaticResource BoldLargeScoreController}"></TextBlock>
                                        <TextBox x:Name="editIntermissionClockText" GotFocus="editIntermissionClockText_GotFocus" GotMouseCapture="editIntermissionClockText_GotMouseCapture"  Style="{StaticResource BoldLargeScoreTextBox}" MaxLength="5" Visibility="Collapsed"  LostFocus="editIntermissionClockText_LostFocus" PreviewKeyUp="editIntermissionClockText_PreviewKeyUp" PreviewKeyDown="editIntermissionClockText_PreviewKeyDown"  ></TextBox>
                                        <StackPanel Orientation="Vertical" Width="20" HorizontalAlignment="Right" Visibility="Collapsed" x:Name="editModeIntermissionTime" >
                                            <Button x:Name="upIntermissionTime" Click="upIntermissionTime_Click">
                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                            <Image Source="Images/up.png" Height="20" ></Image>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Button x:Name="downIntermissionTime" Click="downIntermissionTime_Click">
                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                            <Image Source="Images/down.png" Height="20"  ></Image>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>


