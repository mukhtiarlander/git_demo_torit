<Page x:Class="RDNScoreboard.Views.LineupTemplates.PlainLogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"  ShowsNavigationUI="False"
        d:DesignHeight="600" d:DesignWidth="800"
	Title="PlainProfile">
    <Border BorderBrush="#774ca6" x:Name="borderBrush" BorderThickness="8" >
        <Grid >
         
            <Rectangle  Grid.Column="0"   Grid.RowSpan="3" Grid.ColumnSpan="2"  x:Name="BackgroundColor"    StrokeThickness="1"          />
           

            <Viewbox >
                <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center" >
                    <Image x:Name="LogoPicture" Source="../../Images/Rollerball_pink_s500.png"></Image>
                </StackPanel>
            </Viewbox>

           
         
        </Grid>
    </Border>
</Page>
