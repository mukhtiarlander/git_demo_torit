        WindowStyle="None"
        AllowsTransparency="True"
        MouseEnter="ClockWindow_MouseEnter"
        MouseLeave="ClockWindow_MouseLeave"
        Background="{DynamicResource ClockViewBackgroundBrush}"
        Width="800"
        Height="600"
        xmlns:ImageBehavior="clr-namespace:RDNScoreboard.Controls">
    <Window.Resources>
