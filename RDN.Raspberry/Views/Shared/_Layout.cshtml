<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css?v=" + RDN.Library.Classes.Config.LibraryConfig.CSS_VERSION)" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/main.js?v=" + RDN.Library.Classes.Config.LibraryConfig.JS_VERSION)" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ViewModel/ConfigurationViewModel.js")" type="text/javascript"></script>
    <link rel="icon" type="image/png" href="@RDN.Library.Classes.Config.LibraryConfig.FaviIcon" />
    <!--[if IE]>
    <link rel="shortcut icon" href="@RDN.Library.Classes.Config.LibraryConfig.FaviIcon" type="image/vnd.microsoft.icon" />
    <![endif]-->

</head>
<body>
    <div class="page">
        
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        <a href="@Url.Action("Index", "Admin")">Main menu</a><br /><br />
            &copy; Copyright @RDN.Library.Classes.Config.LibraryConfig.WebsiteShortName
        </footer>
    </div>
</body>
</html>
