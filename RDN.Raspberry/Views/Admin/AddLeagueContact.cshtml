@using RDN.Raspberry.Models.Helpers
@model RDN.Raspberry.Models.OutModel.GenericSingleModel<RDN.Raspberry.Models.Admin.AddLeagueContact>
@{    
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}
<h2>
    @RDN.Library.Classes.Config.LibraryConfig.TeamName contact information</h2>

<a href="@Url.Action("LeagueContacts", "Admin")">Show leagues</a>
<br />
<br />
@Html.Raw(MessageHelper.PrintMessages(Model.MessageList))
<br />
<br />
@using (Html.BeginForm("AddLeagueContact", "Admin"))
{
    <table style="border: 0px;">
        <tr>
            <td>
                Name:
            </td>
            <td>
            <input type="text" maxlength="255" name="Name" value="@Model.Model.Name"/>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                Type:
            </td>
            <td>@Html.DropDownList("LeagueTypeId", Model.Model.LeagueTypes)
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                Association
            </td>
            <td>@Html.DropDownList("AssociationId", Model.Model.Associations)
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                Country:
            </td>
            <td>@Html.DropDownList("CountryId", Model.Model.Countries)
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                State:
            </td>
            <td>
                @Html.TextBox("State")         
                @*<input type="text" maxlength="255" name="State"/>*@
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                City:
            </td>
            <td>
            <input type="text" maxlength="255" name="City"  value="@Model.Model.City"/>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                Homepage:
            </td>
            <td>
            <input type="text" maxlength="255" name="HomePage" value="@Model.Model.HomePage"/>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                Facebook:
            </td>
            <td>
            <input type="text" maxlength="255" name="Facebook" value="@Model.Model.Facebook"/>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                Comments:
            </td>
            <td>
            <textarea name="Comments" cols="35" rows="5">@Model.Model.Comments</textarea>            
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <hr/>
                <h2>Emails</h2>
                <hr/>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                Primary emails:
            </td>
            <td>                           
                <textarea name="PrimaryEmails" cols="35" rows="5">@Model.Model.PrimaryEmails</textarea>
                (One VALID email per line no commas between the emails)
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                Other emails:
            </td>
            <td>                                
                <textarea name="Emails" cols="35" rows="5">@Model.Model.Emails</textarea>
                (One VALID email per line no commas between the emails)
            </td>
        </tr>
        <tr>
            <td colspan="2" style="height: 15px;">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Save" />
            </td>
        </tr>
    </table>
}