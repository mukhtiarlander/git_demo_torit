@model RDN.Library.Classes.League.JobBoard
@{
    ViewBag.Title = "Add New Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Guid memId = RDN.Library.Classes.Account.User.GetMemberId();
    bool subPaid = RDN.Library.Cache.MemberCache.CheckIsLeagueSubscriptionPaid(memId);
    
}

<ol class="breadcrumb">
    <li><a href="@RDN.Utilities.Config.ConfigManager.InternalSite">Home</a></li>
    <li><a href="@Url.Content("~/league/jobboard")">Contact</a></li>
    <li class="active">Add new Job</li>
</ol>
<div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
        @using (Html.BeginForm("AddJob", "JobBoard", FormMethod.Post, new { @id = "addNewJob" }))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 style="margin-top:5px !important"><i class="fa fa-suitcase"></i> Add New Job</h3>
                    <div class="text-muted"> Add a new job here for league.</div>
                </div>
                <div class="panel-body no-padding-top">
                    <div class="col-xs-12">
                        <label class="form-label margin-top-10">Job Title</label>
                        <div>
                            @Html.TextBoxFor(x => x.JobTitle, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <label class="form-label margin-top-10">Report To</label>
                        <div>
                            @Html.TextBoxFor(x => x.ReportsTo, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <label class="form-label margin-top-10">Hours Per Week </label>
                        <div>
                            @Html.TextBoxFor(x => x.HoursPerWeek, new { @type = "text", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <label class="form-label margin-top-10">Date Completed </label>
                        <div>
                            @Html.TextBoxFor(x => x.JobEnds, new { @type = "text", @class = "form-control jquery_datepicker" })
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <label class="form-label margin-top-10">Job Description </label>
                        <div>
                            @Html.TextArea("jobdesc", string.Empty, new {@class = "form-control" })
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <label></label>
                        <div>
                            @Html.CheckBoxFor(models => models.BroadcastJob) <span class="i">Send members email notification.</span>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-default btn-success" name="addNewJob"><i class="fa fa-save"></i> Submit</button>
                    <a class="btn btn-default pull-right" href="@Url.Content("~/league/jobboard")">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>

@if (!subPaid)
{
    <div class="fixedAd">
        <script type="text/javascript">
