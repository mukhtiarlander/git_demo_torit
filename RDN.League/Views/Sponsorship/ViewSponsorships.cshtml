@model List<Common.Sponsors.Classes.SponsorshipItem>
@{
    ViewBag.Title = "Sponsorships";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var memId = RDN.Library.Classes.Account.User.GetMemberId();
    Guid leagueId = RDN.Library.Cache.MemberCache.GetLeagueIdOfMember(memId);
    bool isSec = RDN.Library.Cache.MemberCache.IsSponsorshipOrBetterOfLeague(memId);

}

<ol class="breadcrumb">
    <li><a href="@RDN.Utilities.Config.ConfigManager.InternalSite">Home</a></li>
    <li class="active">Sponsorships</li>
</ol>
<div class="row">
    <div class="co-xs-12 col-sm-4 col-md-3">
        <div class="panel panel-default margin-top-20">
            <div class="panel-heading">
                <div class="row">
                    <div class="list-group">
                        <a href="@Url.Content("~/league/sponsors")" title="Sponsors" class="list-group-item">Sponsors</a>
                        <a href="@Url.Content("~/league/sponsorships")" class="list-group-item active">Sponsorships</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="co-xs-12 col-sm-8 col-md-9">
        <div class="panel panel-default margin-top-20">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <h3 style="margin-top:5px !important"><i class="fa fa-money"></i> Sponsorships</h3>
                    </div>
                    <div class="col-xs-12 col-sm-6 text-right">
                        @if (isSec)
                        {
                            <a class="btn btn-success pull-right" href="@Url.Content("~/league/sponsorship/add")">
                                <i class="fa fa-plus-circle"></i> Add
                            </a>
                        }
                    </div>
                </div>
                <div class="text-muted">Sponsorships allow you to provide a URL to your sponsors to pay you directly through paypal and other processors.</div>
            </div>
            <div class="panel-body no-padding padding-top-10">
                <table class="table table-striped table-hover table-condensed no-margin-bottom" id="sponsorship">
                    <thead>
                        <tr>
                            <th>Sponsorship Name</th>
                            <th>Price</th>
                            <th>Expires </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model)
                        {
                            <tr class="@(b.SponsorshipId % 2 == 0 ? "tr1" : "tr0")">

                                <td>
                                    <a href="@Url.Content("~/league/sponsorship/details/" + b.SponsorshipId + "/" + b.SponsorshipId.ToString().Replace("-", ""))"> b.Name, 18 </a>
                                </td>
                                <td>
                                    @b.Price
                                </td>
                                <td>
                                    @if (b.ExpiresDate != null)
                                    {
                                        <span>
                                            @b.ExpiresDate.Value.ToShortDateString()
                                        </span>
                                    }
                                </td>
                                
                                <td class="text-right">
                                    @if (memId == b.OwnerId || isSec)
                                    {
                                        <a class="btn btn-warning btn-xs" href="@Url.Content("~/league/sponsorship/details/" + b.SponsorshipId + "/" + b.OwnerId.ToString().Replace("-", ""))"><i class="fa fa-eye"></i> View</a> <a class="btn btn-info btn-xs" href="@Url.Content("~/league/sponsorship/edit/" + b.SponsorshipId + "/" + b.OwnerId.ToString().Replace("-", ""))"><i class="fa fa-pencil"></i> Edit</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-warning btn-xs" href="@Url.Content("~/league/sponsorship/details/" + b.SponsorshipId + "/" + b.OwnerId.ToString().Replace("-", ""))"><i class="fa fa-eye"></i> View</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>