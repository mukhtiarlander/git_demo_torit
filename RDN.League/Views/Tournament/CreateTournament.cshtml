@using RDN.League.Models.Game
@model RegisterTournamentModel
@{
    Layout = null;
}
@{
    ViewBag.Title = "Setup Tournament";
    Layout = "~/Views/Shared/_Layout.cshtml";
     Guid memId = RDN.Library.Classes.Account.User.GetMemberId();
    bool subPaid = RDN.Library.Cache.MemberCache.CheckIsLeagueSubscriptionPaid(memId);
}

<div class="fixedContainer">
     <div class="fixedlinksContainter">
        <div class="backLink">
            < <a  href="@Url.Content("~/tournament/view/all/")">Tournaments</a>
        </div>
    </div>
    <div class="fixedCenterContainter">
        <div class="fixTitle">
            Tournament Setup</div>
        <div class="divider"></div>
        <div>
            Here you will setup your tournament. Creating tournaments allows you to track all
            the games for time period of the tournament. So you can track all the players, all
            the teams and watch all the stats for the entire tournament event.<br />
            <br />
            In Order to add games to this tournament, you can either create your game and add
            it, or when you <a href="http://wiki.rdnation.com/Saving_-_Storing_-_Showing_Live_Games_Online"
                target="_blank">publish a game</a> online, you will have the option to add the
            game to the tournament as long as you have the passcode created here.
        </div>
        <br />
        @using (Html.BeginForm())
        {            
            <table class="sutTable">
                <tr>
                    <td class="sutLTD">
                        @Html.LabelFor(m => m.TournamentName)
                    </td>
                    <td class="sutRTD">
                        @Html.TextBoxFor(m => m.TournamentName)
                    </td>
                    <td class="sutValid">@Html.ValidationMessageFor(m => m.TournamentName)
                    </td>
                </tr>
                <tr>
                    <td class="sutLTD">
                        @Html.LabelFor(m => m.StartDate)
                    </td>
                    <td class="sutRTD">
                        @Html.TextBoxFor(model => model.StartDate, new { @class = "jquery_datepicker", @Value = Model.StartDate.ToString("MM/dd/yyyy") })
                    </td>
                    <td class="sutValid">@Html.ValidationMessageFor(m => m.StartDate)
                    </td>
                </tr>
                <tr>
                    <td class="sutLTD">
                        @Html.LabelFor(m => m.EndDate)
                    </td>
                    <td class="sutRTD">
                        @Html.TextBoxFor(model => model.EndDate, new { @class = "jquery_datepicker", @Value = Model.StartDate.ToString("MM/dd/yyyy") })
                    </td>
                    <td class="sutValid">@Html.ValidationMessageFor(m => m.EndDate)
                    </td>
                </tr>
                <tr>
                    <td class="sutLTD">
                        @Html.LabelFor(m => m.Passcode)
                      
                    </td>
                    <td class="sutRTD">
                        @Html.TextBoxFor(m => m.Passcode)
                    </td>
                    <td class="sutValid">@Html.ValidationMessageFor(m => m.Passcode)
                    </td>
                </tr>
                <tr>
                    <td class="sutLTD">
                    </td>
                    <td class="sutRTD">
                        <input class="primary" type="submit" value="Add Tournament" />
                    </td>
                </tr>
            </table>
        
        }
    </div>
      @if (!subPaid)
    { 
        <div class="fixedAd">
            <script type="text/javascript"><!--
    google_ad_client = "ca-pub-1376896373478670";
    /* RDNation SideAd */
    google_ad_slot = "9959849457";
    google_ad_width = 120;
    google_ad_height = 600;
    //-->
            </script>
            <script type="text/javascript" src="https://pagead2.googlesyndication.com/pagead/show_ads.js">
            </script>
        </div>
    }
</div>
<script type="text/javascript">
    $('#StartDate').datepicker();
    $('#EndDate').datepicker(); 
</script>
