@model List<RDN.Library.Classes.Game.Tournament>
@{
    ViewBag.Title = "Manage Your Tournaments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb">
    <li><a href="@RDN.Utilities.Config.ConfigManager.InternalSite">Home</a></li>
    <li class="active">Tournys</li>
</ol>

<div class="panel panel-default margin-top-20">
    <div class="panel-heading">
        <h3 class="margin-bottom-5 margin-top-10"><i class="fa fa-gamepad"></i> Manage Your Owned Tournaments</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover table-condensed" id="tournaments">
            <thead>
                <tr>
                    <th>
                        View
                    </th>
                    <th>Brackets</th>
                    <th>
                        Tournament Name
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        End Date
                    </th>
                    <th>
                        Games Within Tournament
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {

                    <tr>
                        <td>
                            <a href="@Url.Content("~/tournament/view/" + Model[i].PrivateKey.ToString().Replace("-", "") + "/" + Model[i].Id.ToString().Replace("-", ""))">
                                Manage
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Content("~/tournament/brackets/" + Model[i].PrivateKey.ToString().Replace("-", "") + "/" + Model[i].Id.ToString().Replace("-", ""))">
                                Brackets
                            </a>
                        </td>
                        <td>
                            <a target="_blank" href="@Url.Content("http://rdnation.com/roller-derby-tournament/" + Model[i].Id.ToString().Replace("-", "") + "/" + RDN.Utilities.Strings.StringExt.ToSearchEngineFriendly(Model[i].Name))">
                                @Model[i].Name
                            </a>
                        </td>
                        <td>
                            @Model[i].StartDate.ToString("MM/dd/yyyy")
                        </td>
                        <td>
                            @Model[i].EndDate.ToString("MM/dd/yyyy")
                        </td>
                        <td>
                            @Model[i].Games.Count
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        @using (Html.BeginForm("ViewMembers", "Federation"))
        {
            <text>
                <input type="hidden" name="NumberOfPages" value="@Model.Model.NumberOfPages.ToString()" />
                <input type="hidden" name="NumberOfRecords" value="@Model.Model.NumberOfRecords.ToString()" />
                Showing page: @Html.DropDownList("CurrentPage", Model.Model.Pages)
                <input type="submit" value="Show" />
            </text>
        }
    </div>
</div>

<div class="expandableContainer">
    <div class="rightBackLink">
        <a href="@Url.Content("~/tournament/create")"><img src="@Url.Content("~/Content/plus.png")" height="20px" />Create Tournament</a>
    </div>
    <div class="expandableCenterContainter">
        <div class="fixTitle">
            Manage Your Owned Tournaments
        </div>
        <div class="divider"></div>
        <div>
            <table class="listTable tableExtras" id="">
            
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tournaments').dataTable({
            "aaSorting": [[1, "desc"]],
            "bPaginate": false,
            "bLengthChange": false,
            "bFilter": true,
            "bSort": true,
            "bInfo": false,
            "bAutoWidth": false,

        });
    });


</script>
