@model RDN.Portable.Classes.Games.Officiating.RequestDA
@{
    ViewBag.Title = "Add Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Guid memId = RDN.Library.Classes.Account.User.GetMemberId();
    bool subPaid = RDN.Library.Cache.MemberCache.CheckIsLeagueSubscriptionPaid(memId);
}

<div class="fixedContainer">
     <div class="fixedlinksContainter">
        <div class="backLink">
            < <a  href="@Url.Content("~/officiating/requests")">All Requests</a>
        </div>
    </div>
    <div class="fixedCenterContainter">
        <div class="fixTitle">
            Add an Officiating Request
        </div>

        <div class="titleDescription">
            Add a new request for officials.
     
        </div>
        <div class="divider"></div>

        <div>
            @using (Html.BeginForm("AddRequest", "Officiating", FormMethod.Post, new { @id = "addNewRequest" }))
            { 
                <table class="addForumPostTbl">
                    <tr>
                        <td class="b alRight">Teams Playing:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.TeamsPlaying) <span class="i">DCRG vs Charm City</span>
                        </td>
                    </tr>
                  
                    <tr>
                        <td class="b alRight">Date:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(models => models.Date, new { @class = "jquery_datepicker" })

                        </td>
                    </tr>
                     <tr>
                        <td class="b alRight">First Whistle:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(models => models.FirstWhistle, new { @class = "jquery_timepicker" })

                        </td>
                    </tr>
                   
                    <tr>
                        <td class="b alRight">Location Name:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.LocationName) <span class="i">Place of Game</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">Address:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.Address)
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">Address 2:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.Address1)
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">City:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.City) 
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">State:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.State)
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">Zip:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.Zip)
                        </td>
                    </tr>
                      <tr>
                        <td class="b alRight">Is Regulation:
                        </td>
                        <td>
                            <label>@Html.CheckBoxFor(x => x.IsRegulation) <span class="i">Regulation?</span></label>
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">Evaluations Provided:
                        </td>
                        <td>
                            <label>@Html.CheckBoxFor(x => x.EvaluationsProvided) <span class="i">Evaluations For Certification</span></label>
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">Snacks Provided?:
                        </td>
                        <td>
                            <label>@Html.CheckBoxFor(x => x.IsSnacksProvided) <span class="i">Snacks Provided for officials</span></label>
                        </td>
                    </tr>
                     <tr>
                        <td class="b alRight">How Many Refs needed?:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.NoRefNeded)
                        </td>
                    </tr>
                     <tr>
                        <td class="b alRight">How Many NSOs needed?:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.NonsoNeded)
                        </td>
                    </tr>

                    <tr>
                        <td class="b alRight">Stipend Provided?:
                        </td>
                        <td>
                            <label>@Html.CheckBoxFor(x => x.IsReimbursement) <span class="i">Stipend Provided For Travel?</span></label>
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">Travel Stipend for NSOs:</td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.TravelStipendForNSO) 
                        </td>
                    </tr>
                     
                    <tr>
                        <td class="b alRight">Travel Stipend for Refs:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.TravelStipendForRefs)
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">Select Rule Set:
                        </td>
                        <td class="largeInput">
                            @Html.DropDownListFor(x => x.RuleSetId, new SelectList(ViewBag.RuleSets, "Value", "Text"))
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">Description:
                        </td>
                        <td class="largeInput"></td>
                    </tr>
                    <tr>
                        <td colspan="2">


                            @Html.TextArea("Description", string.Empty, new
                           {
                               id = "wmd-input",
                               style = "width:700px"
                           })

                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight"></td>
                        <td class="largeInput">
                            <input type="submit" class="primary" value="Submit Request" name="addRequest" />

                        </td>
                    </tr>

                </table>
               
            }
        </div>
    </div>
    @if (!subPaid)
    { 
        <div class="fixedAd">
            <script type="text/javascript"><!--
    google_ad_client = "ca-pub-1376896373478670";
    /* RDNation SideAd */
    google_ad_slot = "9959849457";
    google_ad_width = 120;
    google_ad_height = 600;
    //-->
            </script>
            <script type="text/javascript" src="https://pagead2.googlesyndication.com/pagead/show_ads.js">
            </script>
        </div>
    }
</div>
<script type="text/javascript">
    $("#addNewRequest").validate({
        rules: {
            TeamsPlaying: "required",
            LocationName: "required",
            Address: "required",
            RuleSetId: "required"
        }
    });
    $("#TravelStipendForRefs").numeric({ negative: false });
    $("#TravelStipendForNSO").numeric({ negative: false });
    $("#NoRefNeded").numeric({ negative: false, decimal: false });
    $("#NonsoNeded").numeric({ negative: false, decimal: false });
    $('#Date').datepicker();
    $('#FirstWhistle').timepicker();
    
    $(function () {
        tinymce.init({
            mode: "textareas",
            elements: "elm2",
            theme: "advanced",
            skin: "o2k7",
            skin_variant: "silver",
            plugins: "safari,style,layer,table,advhr,advimage,advlink,inlinepopups,preview,media,contextmenu,directionality,fullscreen,noneditable,visualchars,nonbreaking,xhtmlxtras,template",

            // Theme options
            theme_advanced_buttons1: "bold,italic,underline,strikethrough,|,justifyleft,justifycenter,justifyright,justifyfull,|,bullist,numlist,|,outdent,indent,blockquote,|,formatselect,fontsizeselect",
            theme_advanced_buttons2: "link,unlink,anchor,image,cleanup,code,|,preview,|,forecolor,backcolor,|tablecontrols,|,hr,removeformat,visualaid,|,iespell,media,|,ltr,rtl",
            theme_advanced_buttons3: "",
            theme_advanced_buttons4: "",
            theme_advanced_toolbar_location: "top",
            theme_advanced_toolbar_align: "left",
            theme_advanced_statusbar_location: "bottom",
            theme_advanced_resizing: true,
        });
    });
</script>
