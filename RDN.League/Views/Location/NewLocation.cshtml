@using RDN.League.Models.Location
@using RDN.League.Models.Utilities
@model NewLocation
@{
    ViewBag.Title = "Create New Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="fixedContainer">
    <div class="fixedCenterContainter">
        <div class="fixTitle">
            Create New Location
        </div>
        <div class="divider"></div>
        <div>
            @using (Html.BeginForm("NewLocation", "Location", FormMethod.Post, new { @id = "newLocation" }))
            { 
                <table class="addForumPostTbl">
                    <tr>
                        <td class="b">Name Of Location:
                        </td>
                        <td class="subject">
                            @Html.TextBoxFor(x => x.LocationName)
                        </td>
                    </tr>
                    <tr>
                        <td class="b">Address:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.Address1)
                            <span style="color: red;">@Html.ValidationMessageFor(m => m.Address1)</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="b">Address 2:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.Address2)
                        </td>
                    </tr>
                    <tr>
                        <td class="b">City:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.CityRaw)
                            <span style="color: red;">@Html.ValidationMessageFor(m => m.CityRaw)</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="b">State:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.StateRaw)
                        </td>
                    </tr>
                    <tr>
                        <td class="b">Zip Code:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.Zip)
                            <span style="color: red;">@Html.ValidationMessageFor(m => m.Zip)</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="b">Country:
                        </td>
                        <td class="largeInput">
                            @Html.DropDownListFor(x => x.Country, @Model.Countries, "Select Country...")
                            <span style="color: red;">@Html.ValidationMessageFor(m => m.Country)</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="b">Website:
                        </td>
                        <td class="subject">
                            @Html.TextBoxFor(x => x.Website)
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" class="primary" value="Create Location" name="createLocation" />
                            <input type="submit" class="primary" value="Create & Add Another" name="createAnother" />
                        </td>
                    </tr>
                </table>
                @Html.HiddenFor(x => x.OwnerId)
                @Html.HiddenFor(x => x.OwnerType)
                @Html.HiddenFor(x => x.RedirectTo)
            }
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">

    $("#newLocation").validate({
        rules: {
            LocationName: "required"
        }
    });
</script>
