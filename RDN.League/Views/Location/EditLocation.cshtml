@using RDN.League.Models.Location
@using RDN.League.Models.Utilities
@model NewLocation
@{
    ViewBag.Title = "Create New Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("AllLocations","Location")">Location</a></li>
    @*<li><a href="@Url.Content("~/store/home/" + Model.PrivateManagerId.ToString().Replace("-", "") + "/" + Model.MerchantId.ToString().Replace("-", ""))">Shop</a></li>*@
    <li class="active">Edit Location</li>
</ol>
<div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="margin-bottom-10 margin-top-5"><i class="fa fa-map-marker"></i> Update Location</h3>
            </div>
            @using (Html.BeginForm("EditLocation", "Location", FormMethod.Post, new { @id = "editLocation" }))
            {
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-label margin-bottom-5">
                                Name Of Location
                            </div>
                            <div class="margin-bottom-15">
                                @Html.TextBoxFor(x => x.LocationName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-label margin-bottom-5">
                                Address
                            </div>
                            <div class="margin-bottom-15">
                                @Html.TextBoxFor(x => x.Address1, new { @class = "form-control" })
                                <span style="color: red;">@Html.ValidationMessageFor(m => m.Address1)</span>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-label margin-bottom-5">
                                Address 2
                            </div>
                            <div class="margin-bottom-15">
                                @Html.TextBoxFor(x => x.Address2, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-label margin-bottom-5">
                                City
                            </div>
                            <div class="margin-bottom-15">
                                @Html.TextBoxFor(x => x.CityRaw, new { @class = "form-control" })
                                <span style="color: red;">@Html.ValidationMessageFor(m => m.CityRaw)</span>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-label margin-bottom-5">
                                State
                            </div>
                            <div class="margin-bottom-15">
                                @Html.TextBoxFor(x => x.StateRaw, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-label margin-bottom-5">
                                Zip Code
                            </div>
                            <div class="margin-bottom-15">
                                @Html.TextBoxFor(x => x.Zip, new { @class = "form-control" })
                                <span style="color: red;">@Html.ValidationMessageFor(m => m.Zip)</span>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-label margin-bottom-5">
                                Country
                            </div>
                            <div class="margin-bottom-15">
                                @Html.DropDownListFor(x => x.Country, @Model.Countries, "Select Country...", new { @class = "full-width" })
                                <span style="color: red;">@Html.ValidationMessageFor(m => m.Country)</span>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-label margin-bottom-5">
                                Website
                            </div>
                            <div class="margin-bottom-15">
                                @Html.TextBoxFor(x => x.Website, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer no-padding-bottom">
                    <button type="submit" class="btn btn-success margin-bottom-10" name="createLocation"><i class="fa fa-save"></i> Update Location</button>
                </div>
                @Html.HiddenFor(x => x.LocationId)
                @Html.HiddenFor(x => x.OwnerId)
                @Html.HiddenFor(x => x.OwnerType)
                @Html.HiddenFor(x => x.RedirectTo)
            }
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">

    $("#editLocation").validate({
        rules: {
            LocationName: "required",
            Zip: "required"
        }
    });
</script>
