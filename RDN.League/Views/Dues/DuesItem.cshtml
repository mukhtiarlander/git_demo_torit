@using RDN.League.Models.Calendar
@using RDN.League.Models.Utilities
@using RDN.Library.Classes.Dues
@model RDN.Portable.Classes.Controls.Dues.DuesPortableModel
@{
    var Fee = Model.DuesFees.FirstOrDefault();
    ViewBag.Title = "Pay Dues For " + Fee.PayBy.ToLongDateString();
    Layout = "~/Views/Shared/_Layout.cshtml";


}
<ol class="breadcrumb">
    <li><a href="@RDN.Utilities.Config.ConfigManager.InternalSite">Home</a></li>
    <li><a href="@Url.Content("~/dues/league/" + @Model.LeagueOwnerId.ToString().Replace("-", ""))">Dues</a></li>
    <li class="active">Dues Item</li>
</ol>


<div class="panel panel-default margin-top-20">
    <div class="panel-heading text-right" style="background-color:#fafafa">
        @if (ViewBag.previousDueItem != 0)
        {
            <a class="btn btn-default btn-sm" href="@Url.Content("~/dues/collection/" + ViewBag.previousDueItem + "/" + Model.DuesId.ToString().Replace("-", ""))"><i class="fa fa-backward"></i> Previous Due</a>
        }
        else
        {
            <a class="btn btn-default btn-sm" href="javascript: void(0)"><i class="fa fa-backward"></i> Previous Due</a>
        }
        @if (ViewBag.nextDueItem != 0)
        {
            <a class="btn btn-default btn-sm" href="@Url.Content("~/dues/collection/" + ViewBag.nextDueItem + "/" + Model.DuesId.ToString().Replace("-", ""))">Next Due <i class="fa fa-forward"></i> </a>
        }
        else
        {
            <a class="btn btn-default btn-sm" href="javascript: void(0)"><i class="fa fa-forward"></i> Next Due</a>
        }
    </div>
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-6">
                <h3 style="margin-top:5px !important"><i class="fa fa-pencil-square-o"></i> Collect Dues For @Fee.PayBy.ToLongDateString()</h3>
            </div>
            <div class="col-xs-6 text-right">
                <a class="btn btn-primary btn-sm" title="Edit Item" href="@Url.Content("~/dues/collection/edit/" + Fee.DuesItemId + "/" + Model.DuesId.ToString().Replace("-", ""))">
                    <i class="fa fa-pencil"></i> Edit
                </a>
            </div>
        </div>
        <div class="text-muted">
            This page allows you to define who has paid dues and who hasn't. You can send them
            reminders, pay only a fraction of the required payment or just review who paid and
            who didn't. Only a owner or manager can see this page.
        </div>
    </div>
    <div class="panel-heading text-right" style="background-color:#fafafa">
        <span class="pull-left margin-top-5">
            Amount: <b class="font18">@Fee.CostOfDues.ToString("N2")</b>
        </span>
        <a class="btn btn-default btn-sm" onclick="document.getElementById('DuesReport').submit();" title="Export Report">
            <i class="fa fa-download"></i> Export
        </a>
        <a class="btn btn-default btn-sm" title="Dues Classifications" href="@Url.Content("~/dues/classification/" + @Model.OwnerEntity + "/" + @Model.LeagueOwnerId.ToString().Replace("-", "") + "/" + @Model.DuesId.ToString().Replace("-", ""))">
            <i class="fa fa-folder"></i> Classify
        </a>
        <button class="btn btn-default btn-sm" type="button" onclick="javascript:SendReminderToPayDuesAll(this)"><i class="fa fa-envelope"></i> Send Reminder Email to All</button>
    </div>
    <div class="panel-body" style="overflow-x:auto">

        <table class="table table-striped table-hover table-condensed no-margin-bottom" id="members">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th>Last</th>
                    <th>
                        Name
                    </th>
                    <th class="text-right">
                        Due
                    </th>
                    <th class="text-right">
                        Collected
                    </th>
                    <th class="text-center">
                        Pay
                    </th>
                    <th></th>
                    <th>
                        Email Reminder
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Members.Count; i++)
                {

                    <tr>
                        <td class="vertical-middle">
                            <a class="btn btn-success btn-xs" href="@Url.Content("~/dues/member/edit/" + Fee.DuesItemId + "/" + Model.DuesId.ToString().Replace("-", "") + "/" + Model.Members[i].MemberId.ToString().Replace("-", ""))"><i class="fa fa-pencil"></i></a>
                        </td>
                        <td>@Model.Members[i].LastName</td>
                        <td>
                            <a target="_blank" href="@Url.Content("~/dues/member/" + @Model.LeagueOwnerId.ToString().Replace("-", "") + "/" + Model.Members[i].MemberId.ToString().Replace("-", ""))">@Model.Members[i].DerbyName</a>
                        </td>


                        <td id="@Model.Members[i].MemberId-Due" class="text-right">
                            @if (Model.Members[i].isWaived || Model.Members[i].isPaidFull)
                            {
                                <span>0.00</span>
                            }
                            else
                            {
                                @Model.Members[i].due.ToString("N2")
                            }
                        </td>
                        <td id="@Model.Members[i].MemberId-Collected" class="text-right">
                            @if (Model.Members[i].isWaived)
                            {
                                <span>Waived</span>
                            }
                            else
                            {
                                @Model.Members[i].collected.ToString("N2")
                            }
                        </td>
                        <td class="text-center vertical-middle">
                            @if (Model.Members[i].isWaived)
                            {
                                <button class="btn btn-default btn-xs" onclick="Dues.RemoveWaivedFee(this,'@Model.Members[i].MemberId    ')">Clear Waived</button>
                            }
                            else if (!Model.Members[i].isPaidFull)
                            {
                                <input class="form-control input-sm" style="width:100px;margin:0 auto" id="@Model.Members[i].MemberId-Dues-Amount" type="text" value="@Model.Members[i].due.ToString("N2")" />
                            }
                        </td>
                        <td class="vertical-middle">
                            @if (!Model.Members[i].isPaidFull)
                            {
                                <input class="btn btn-warning btn-xs" id="@Model.Members[i].MemberId-button" type="button" class="primary" value="Paid" onclick="javascript:PayDues(this,'@Model.Members[i].MemberId    ')" />
                                <input class="btn btn-warning btn-xs" id="@Model.Members[i].MemberId-waive-button" type="button" value="Waive" onclick="javascript:WaiveDues(this,'@Model.Members[i].MemberId    ')" />

                            }
                        </td>
                        <td class="vertical-middle">
                            @if (!Model.Members[i].isPaidFull && Model.Members[i].UserId != new Guid())
                            {
                                <button class="btn btn-info btn-xs" id="@Model.Members[i].MemberId-button-email" type="button"
                                        onclick="javascript:SendReminderToPayDues(this,'@Model.Members[i].MemberId    ')">
                                    <i class="fa fa-envelope"></i> Send Reminder
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @using (Html.BeginForm("DuesItemReport", "Dues", FormMethod.Post, new { @id = "DuesReport" }))
        {
            @Html.HiddenFor(x => x.DuesId)
            @Html.Hidden("DuesItemId", Fee.DuesItemId)
            @Html.HiddenFor(x => x.LeagueOwnerId)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#members').dataTable({
            "bPaginate": false,
            "bLengthChange": false,
            "bFilter": true,
            "bSort": true,
            "bInfo": false,
            "bAutoWidth": false,
            "oLanguage": { "sSearch": "" },
        });
        $('#members_filter input').addClass('form-control').attr("placeholder", "Search");
    });
</script>
