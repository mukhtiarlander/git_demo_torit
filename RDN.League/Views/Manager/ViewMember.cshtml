@using RDN.League.Models.Helpers
@using RDN.League.Models.Utilities
@model RDN.League.Models.OutModel.GenericSingleModel<RDN.League.Models.User.ViewMember>
@{    
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div id="page-heading">
    <h1>
        Profile of @Model.Model.Firstname @Model.Model.Surname</h1>
</div>
<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
    <tr>
        <th rowspan="3" class="sized">
            <img src="../../Content/theme1/images/shared/side_shadowleft.jpg" width="20" height="300"
                alt="" />
        </th>
        <th class="topleft">
        </th>
        <td id="tbl-border-top">
            &nbsp;
        </td>
        <th class="topright">
        </th>
        <th rowspan="3" class="sized">
            <img src="../../Content/theme1/images/shared/side_shadowright.jpg" width="20" height="300"
                alt="" />
        </th>
    </tr>
    <tr>
        <td id="tbl-border-left">
        </td>
        <td>
            <!--  start content-table-inner -->
            <div id="content-table-inner">
                @Html.Raw(MessageHelper.PrintMessages(Model.MessageList))
                <table border="0" width="100%" cellpadding="0" cellspacing="0">
                    <tr valign="top">
                        <td>
                            @if (MemberStatus.IsInAny(MemberStatusTypes.Manager | MemberStatusTypes.President) || MemberStatus.IsSelf(Model.Model.MemberId))
                            {
                                using (Html.BeginForm("ViewMember", "Manager"))
                                { 
                                <!-- start id-form -->
                                @Html.HiddenFor(x => x.Model.MemberId)
                                <table border="0" cellpadding="0" cellspacing="0" id="id-form">
                                    <tr>
                                        <th valign="top" colspan="3">
                                        </th>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Firstname
                                        </th>
                                        <td>
                                            @Model.Model.Firstname
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Surname:
                                        </th>
                                        <td>
                                            @Model.Model.Surname
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Game nick:
                                        </th>
                                        <td>
                                            @Html.TextBoxFor(x => x.Model.PlayerName, new { @class = "inp-form" })
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Shirt-number:
                                        </th>
                                        <td>
                                            @Html.TextBoxFor(x => x.Model.PlayerNumber, new { @class = "inp-form" })
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Team:
                                        </th>
                                        <td>
                                            @Html.DropDownList("Model.SelectedTeamId", Model.Model.Teams, new { Class = "styledselect_form_1" })
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Info:
                                        </th>
                                        <td>
                                            @Html.TextAreaFor(x => x.Model.Information, new { @class = "form-textarea" })
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            &nbsp;
                                        </th>
                                        <td valign="top">
                                            <input type="submit" value="Update" class="form-submit" />
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                </table>
                                }
                            }
                            else
                            {
                                <!-- start id-form -->
                                <table border="0" cellpadding="0" cellspacing="0" id="id-form">
                                    <tr>
                                        <th valign="top" colspan="3">
                                        </th>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Firstname
                                        </th>
                                        <td>
                                            @Model.Model.Firstname
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Surname:
                                        </th>
                                        <td>
                                            @Model.Model.Surname
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Game nick:
                                        </th>
                                        <td>
                                            @Model.Model.PlayerName
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Shirt-number:
                                        </th>
                                        <td>
                                            @Model.Model.PlayerNumber
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Team:
                                        </th>
                                        <td>
                                            @{
                                if (Model.Model.Team != null)
                                {
                                                @Model.Model.Team.Name
                                }
                                            }
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            Info:
                                        </th>
                                        <td>
                                            @Model.Model.Information
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                </table>
                            }
                            <!-- end id-form  -->
                        </td>
                        <td>
                            <!--  start related-activities -->
                            <!-- end related-activities -->
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <img src="../../Content/theme1/images/shared/blank.gif" width="695" height="1" alt="blank" />
                        </td>
                        <td>
                        </td>
                    </tr>
                </table>
                <div class="clear">
                </div>
            </div>
            <!--  end content-table-inner  -->
        </td>
        <td id="tbl-border-right">
        </td>
    </tr>
    <tr>
        <th class="sized bottomleft">
        </th>
        <td id="tbl-border-bottom">
            &nbsp;
        </td>
        <th class="sized bottomright">
        </th>
    </tr>
</table>
