@using RDN.League.Models.Helpers
@using RDN.League.Models.Manager
@using RDN.League.Models.OutModel
@model GenericSingleModel<RDN.League.Models.League.JoinLeague>
@{
    Model.Javascripts.Add("JoinContactLeague.js");
    Layout = "~/Views/Shared/_Layout1.cshtml";        
}

<div id="page-heading">
    <h1>
        Join a league</h1>        
</div>
<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
    <tr>
        <th rowspan="3" class="sized">
            <img src="../../Content/theme1/images/shared/side_shadowleft.jpg" width="20" height="300"
                alt="" />
        </th>
        <th class="topleft">
        </th>
        <td id="tbl-border-top">
            &nbsp;
        </td>
        <th class="topright">
        </th>
        <th rowspan="3" class="sized">
            <img src="../../Content/theme1/images/shared/side_shadowright.jpg" width="20" height="300"
                alt="" />
        </th>
    </tr>
    <tr>
        <td id="tbl-border-left">
        </td>
        <td>
            <!--  start content-table-inner -->
            <div id="content-table-inner">
                @Html.Raw(MessageHelper.PrintMessages(Model.MessageList))

                @using (Html.BeginForm())
                {
                    <table border="0" width="100%" cellpadding="0" cellspacing="0">
                        <tr valign="top">
                            <td>
                                <!-- start id-form -->
                                <table border="0" cellpadding="0" cellspacing="0" id="id-form">
                                    <tr>
                                        <th valign="top">
                                            ContactLeague name:
                                        </th>
                                        <td>
                                            <input type="text" class="inp-form" name="ContactLeagueName" id="LeagueName" />
                                        </td>
                                        <td>
                                            
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            &nbsp;
                                        </th>
                                        <td valign="top">
                                            <input type="button" value="" class="form-submit" onclick="retrieveLeagues($('#ContactLeagueName').val(), 'product-table');" />
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                </table>
                                <!-- end id-form  -->
                            </td>
                            <td>
                                <!--  start related-activities -->
                                <div id="related-activities">
                                    <!--  start related-act-top -->
                                    <div id="related-act-top">
                                        <img src="../../Content/theme1/images/forms/header_related_act.gif" width="271" height="43" alt="" />
                                    </div>
                                    <!-- end related-act-top -->
                                    <!--  start related-act-bottom -->
                                    <div id="related-act-bottom">
                                        <!--  start related-act-inner -->
                                        <div id="related-act-inner">
                                            <div class="left">
                                                <a href="">
                                                    <img src="../../Content/theme1/images/forms/icon_plus.gif" width="21" height="21" alt="" /></a></div>
                                            <div class="right">
                                                <h5>
                                                    ContactLeague not found?</h5>
                                                
                                                <ul class="greyarrow">                                                    
                                                    <li><a href="@Url.Action("CreateLeague")">Create league</a></li>
                                                </ul>
                                            </div>                                            
                                            <div class="clear">
                                            </div>
                                        </div>
                                        <!-- end related-act-inner -->
                                        <div class="clear">
                                        </div>
                                    </div>
                                    <!-- end related-act-bottom -->
                                </div>
                                <!-- end related-activities -->
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="../../Content/theme1/images/shared/blank.gif" width="695" height="1" alt="blank" />
                            </td>
                            <td>
                            </td>
                        </tr>
                    </table>
                    <table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
                        <tr>                                                        
                            <th class="table-header-repeat line-left">
                                Team
                            </th>                            
                        </tr>                                           
                    </table>
                }
                <div class="clear">
                </div>
            </div>
            <!--  end content-table-inner  -->
        </td>
        <td id="tbl-border-right">
        </td>
    </tr>
    <tr>
        <th class="sized bottomleft">
        </th>
        <td id="tbl-border-bottom">
            &nbsp;
        </td>
        <th class="sized bottomright">
        </th>
    </tr>
</table>
