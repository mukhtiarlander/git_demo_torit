@using RDN.League.Models.Helpers
@model RDN.League.Models.OutModel.GenericSingleModel<RDN.League.Models.Account.ChangePasswordModel>
@{        
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style type="text/css">
    #id-form label {
        color: black;
    }
</style>
<div id="page-heading">
    <h1>
        Change your password</h1>
</div>
<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
    <tr>
        <th rowspan="3" class="sized">
            <img src="../../Content/theme1/images/shared/side_shadowleft.jpg" width="20" height="300"
                alt="" />
        </th>
        <th class="topleft">
        </th>
        <td id="tbl-border-top">
            &nbsp;
        </td>
        <th class="topright">
        </th>
        <th rowspan="3" class="sized">
            <img src="../../Content/theme1/images/shared/side_shadowright.jpg" width="20" height="300"
                alt="" />
        </th>
    </tr>
    <tr>
        <td id="tbl-border-left">
        </td>
        <td>
            <!--  start content-table-inner -->
            <div id="content-table-inner">
                <p style="margin-bottom: 10px;">
                    Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength
                    characters in length.
                </p>
                @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
                @Html.Raw(MessageHelper.PrintMessages(Model.MessageList))
                @using (Html.BeginForm())
                {                    
                    <table border="0" width="100%" cellpadding="0" cellspacing="0">
                        <tr valign="top">
                            <td>
                                <!-- start id-form -->
                                <table border="0" cellpadding="0" cellspacing="0" id="id-form">
                                    <tr>
                                        <th valign="top">
                                            @Html.LabelFor(x => x.Model.OldPassword)
                                        </th>
                                        <td>
                                            @Html.PasswordFor(x => x.Model.OldPassword, new { @class = "inp-form" })
                                        </td>
                                        <td>
                                            @Html.ValidationMessageFor(m => m.Model.OldPassword)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            @Html.LabelFor(x => x.Model.Password)
                                        </th>
                                        <td>
                                            @Html.PasswordFor(x => x.Model.Password, new { @class = "inp-form" })
                                        </td>
                                        <td>
                                            @Html.ValidationMessageFor(m => m.Model.Password)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            @Html.LabelFor(x => x.Model.PasswordRepeat)
                                        </th>
                                        <td>
                                            @Html.PasswordFor(x => x.Model.PasswordRepeat, new { @class = "inp-form" })
                                        </td>
                                        <td>
                                            @Html.ValidationMessageFor(m => m.Model.PasswordRepeat)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            &nbsp;
                                        </th>
                                        <td valign="top">                                            
                                            <input type="submit" value="" class="form-submit" />
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                </table>
                                <!-- end id-form  -->
                            </td>
                            <td>
                                <!--  start related-activities -->
                                <!-- end related-activities -->
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="../../Content/theme1/images/shared/blank.gif" width="695" height="1" alt="blank" />
                            </td>
                            <td>
                            </td>
                        </tr>
                    </table>
                }
                <div class="clear">
                </div>
            </div>
            <!--  end content-table-inner  -->
        </td>
        <td id="tbl-border-right">
        </td>
    </tr>
    <tr>
        <th class="sized bottomleft">
        </th>
        <td id="tbl-border-bottom">
            &nbsp;
        </td>
        <th class="sized bottomright">
        </th>
    </tr>
</table>
