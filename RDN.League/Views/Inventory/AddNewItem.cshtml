@model RDN.Library.Classes.League.ItemInfoDA
@{
    ViewBag.Title = "Add New Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Guid memId = RDN.Library.Classes.Account.User.GetMemberId();
    bool subPaid = RDN.Library.Cache.MemberCache.CheckIsLeagueSubscriptionPaid(memId);
    
}
<ol class="breadcrumb">
    <li><a href="@RDN.Library.Classes.Config.LibraryConfig.InternalSite">Home</a></li>
    <li><a href="@Url.Content("~/league/inventory/all")">Inventory</a></li>
    <li class="active">Add new Item</li>
</ol>


<div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3">
        @using (Html.BeginForm("AddNewItem", "Inventory", FormMethod.Post, new { @id = "NewItemAdd" }))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 style="margin-top:5px !important"><i class="fa fa-cube"></i> Add New Item</h3>
                    <div class="text-muted"> Add a new item to the inventory.</div>
                </div>
                <div class="panel-body no-padding-top">
                    <div class="row">
                        <div class="col-xs-12">
                            <label class="form-label margin-top-10">Item Serial No</label>
                            <div>
                                @Html.TextBoxFor(x => x.ItemSerialNo, new { @type = "text", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <label class="form-label margin-top-10">Item Name</label>
                            <div>
                                @Html.TextBoxFor(x => x.ItemName, new { @type = "text", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <label class="form-label margin-top-10">Unit Price</label>
                            <div>
                                @Html.TextBoxFor(x => x.UnitePice, new { @type = "text", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <label class="form-label margin-top-10">Location</label>
                            <div>
                                @Html.TextBoxFor(x => x.Location, new { @type = "text", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <label class="form-label margin-top-10">Quantity</label>
                            <div>
                                @Html.TextBoxFor(x => x.Quantity, new { @type = "text", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <label class="form-label margin-top-10">Notes</label>
                            <div>
                                @Html.TextArea("Notes", string.Empty, new { @class = "form-control full-width" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-default btn-success" name="NewItemAdd"><i class="fa fa-save"></i> Add Item</button>
                    <a class="btn btn-default pull-right" href="@Url.Content("~/league/inventory/all")">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $("#NewItemAdd").validate({
        rules: {
            ItemName: "required",
            UnitePice: "required",
            Location: "required"
        }
    });

    $(function () {
        tinymce.init({
            mode: "textareas",
            elements: "elm2",
            theme: "modern",
            plugins: "layer,table,preview,media,contextmenu,directionality,fullscreen,noneditable,visualchars,nonbreaking,template,link",
        });
    });

</script>
