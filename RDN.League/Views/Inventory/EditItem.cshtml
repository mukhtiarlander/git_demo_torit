@model RDN.Library.Classes.League.ItemInfoDA
@{
    ViewBag.Title = "Edit Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Guid memId = RDN.Library.Classes.Account.User.GetMemberId();
    bool subPaid = RDN.Library.Cache.MemberCache.CheckIsLeagueSubscriptionPaid(memId);
    
}
<ol class="breadcrumb">
    <li><a href="@RDN.Utilities.Config.ConfigManager.InternalSite">Home</a></li>
    <li><a href="@Url.Content("~/league/inventory/all")">Inventory</a></li>
    <li class="active">Edit Item</li>
</ol>

<div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3">
        @using (Html.BeginForm("EditItem", "Inventory", FormMethod.Post, new { @id = "EditItem" }))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <h3 style="margin-top:5px !important"><i class="fa fa-cube"></i> @Model.ItemName</h3>
                        </div>
                        <div class="col-xs-12 col-sm-6 text-right">
                            <a class="btn btn-danger btn-sm" onclick="return confirm('Really Delete?')" title="Delete Inventory Item" href="@Url.Content("~/league/inventory/delete/" + Model.ItemId + "/" + Model.ItemsForLeague.ToString().Replace("-", ""))">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                    <div class="text-muted"> Edit item in the leagues inventory.</div>
                </div>
                <div class="panel-body no-padding-top">
                    <div class="row">
                        <div class="col-xs-12">
                            <label class="form-label margin-top-10">Item Serial No</label>
                            <div>
                                @Html.TextBoxFor(x => x.ItemSerialNo, new { @type = "text", @class = "form-control", })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <label class="form-label margin-top-10">Item Name</label>
                            <div>
                                @Html.TextBoxFor(x => x.ItemName, new { @type = "text", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <label class="form-label margin-top-10">Begin on</label>
                            <div>
                                @Html.TextBoxFor(models => models.UnitePice, new { @type = "text", @class = "form-control"})
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <label class="form-label margin-top-10">Ends On</label>
                            <div>
                                @Html.TextBoxFor(models => models.Location, new { @type = "text", @class = "form-control"})
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <label class="form-label margin-top-10">Sponsored</label>
                            <div>
                                @Html.TextBoxFor(x => x.Quantity, new { @type = "text", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <label class="form-label margin-top-10">Notes</label>
                            <div>
                                @Html.TextArea("Description", Model.Notes != null ? Model.Notes.ToString() : "", new { id = "wmd-input", @class = "form-control full-width" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-default btn-success" name="EditSponsor"><i class="fa fa-save"></i> Save</button>
                    <a class="btn btn-default pull-right" href="@Url.Content("~/league/inventory/all")">Cancel</a>
                </div>
            </div>
              @Html.HiddenFor(models => models.ItemId)
                @Html.HiddenFor(models => models.ItemsForLeague)
                @Html.HiddenFor(models => models.ItemAddByMember)
        }
    </div>
</div>


<script type="text/javascript">
    $("#EditItem").validate({
        rules: {
            ItemName: "required",
            UnitePice: "required",
            Location: "required"            
        }
    });
 
    $(function () {
        tinymce.init({
            mode: "textareas",
            elements: "elm2",
            theme: "modern",
             plugins: "layer,table,preview,media,contextmenu,directionality,fullscreen,noneditable,visualchars,nonbreaking,template",
        });
    });

</script>