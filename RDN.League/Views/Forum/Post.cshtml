@using RDN.Library.Classes.Forum;
@model ForumTopic
@{
    ViewBag.Title = Model.TopicTitle + " Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="@RDN.Utilities.Config.ConfigManager.InternalSite">Home</a></li>
    <li><a href="@Url.Content("~/forum/posts/" + Model.ForumType + "/" + Model.ForumId.ToString().Replace("-", ""))">Forum</a></li>
    <li class="active">Forum Post</li>
</ol>

<div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-12 col-sm-8 col-lg-9" >
                        <h3 id="topicTitle" class="margin-top-5">"@Model.TopicTitle"</h3>
                        <span id="topicEditTitle" class="display-none ">
                            <input class="form-control margin-bottom-10" type="text" id="topicTitleEdit" placeholder="@Model.TopicTitle" />
                        </span>
                        <p><span class="text-muted">@Model.Created.ToLongDateString() @Model.Created.ToShortTimeString() (@Model.ViewCount views)</span></p>
                    </div>
                    @if (Model.IsManagerOfTopic)
                    {
                        <div class="col-xs-12 col-sm-4 col-lg-3 text-right">
                            <button class="btn btn-primary btn-sm" type="button" id="editTitle" onclick="EnableForumTopicEdit(this,'true')">
                                <i class="fa fa-pencil"></i> Edit
                            </button>
                            <button id="updateEditTitle" class="btn btn-success btn-sm display-none" type="button" onclick="ForumTopicEditSub(this)"><i class="fa fa-save"></i> Save</button>
                            <button id="cancelEditTitle" class="btn btn-default btn-sm display-none" type="button" onclick="EnableForumTopicEdit(this,'false')">Cancel</button>
                        </div>
                    }
                </div>
            </div>
            <div class="panel-heading text-right" style="background-color:#fafafa">
                @if (!Model.IsLocked)
                {
                    <a class="btn btn-info btn-sm" href="@Url.Content("~/forum/post/reply/" + @Model.ForumId.ToString().Replace("-", "") + "/" + @Model.TopicId.ToString().Replace("-", ""))">
                        <i class="fa fa-reply"></i> Reply To Post
                    </a>
                }
                else
                {
                    <i class="fa fa-lock" title="Topic is locked"></i>
                }
                @if (!Model.IsWatching)
                {
                    <button onclick="ForumPostToggleWatch(this)" class="btn btn-info btn-sm" title="Sends email notifications when someone replies">
                        <i class="fa fa-binoculars"></i> Watch
                    </button>
                }
                else
                {
                    <button type="button" onclick="ForumPostToggleWatch(this)" class="btn btn-info btn-sm" title="Sends email notifications when someone replies">
                        <i class="fa fa-binoculars"></i> Stop Watching
                    </button>
                }
            </div>
            <div class="panel-body">

                @foreach (var message in Model.Messages)
                {
                    <div id="msg-@message.MessageId" class="panel panel-default" style="background-color:#fafafa">
                        <div class="panel-body padding-bottom-10">
                            <div class="row">
                                <div class="col-xs-12 padding-bottom-10" style="border-bottom:#ddd dashed 1px">
                                    <table>
                                        <tr>
                                            <td>
                                                @if (message.Member.Photos.Where(x => x.IsPrimaryPhoto == true).FirstOrDefault() != null)
                                                {
                                                    <img height="65px" alt="@message.Member.Photos.Where(x => x.IsPrimaryPhoto == true).FirstOrDefault().Alt" src="@message.Member.Photos.Where(x => x.IsPrimaryPhoto == true).FirstOrDefault().ImageUrl" />
                                                }
                                                else if (message.Member.Gender == RDN.Portable.Classes.Account.Enums.GenderEnum.Female)
                                                {
                                                    <img height="65px" src="@Url.Content("~/content/roller-girl.jpg")" alt="roller derby girl" />
                                                }
                                                else
                                                {
                                                    <img height="65px" src="@Url.Content("~/content/roller-person.gif")" alt="roller derby boy" />
                                                }
                                            </td>
                                            <td class="padding-left-10">
                                                @if (Model.ForumType == RDN.Portable.Classes.Forum.Enums.ForumOwnerTypeEnum.league)
                                                {
                                                    <a target="_blank" href="@Url.Content("~/member/" + message.Member.MemberId.ToString().Replace("-", "") + "/" + RDN.Utilities.Strings.StringExt.ToSearchEngineFriendly(message.Member.DerbyName))">
                                                        <h4>@message.Member.DerbyName</h4>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a target="_blank" href="@Url.Content(RDN.Portable.Config.ServerConfig.WEBSITE_DEFAULT_LOCATION + "/roller-derby-skater/" + RDN.Utilities.Strings.StringExt.ToSearchEngineFriendly(message.Member.DerbyName) + "/" + message.Member.MemberId.ToString().Replace("-", ""))">
                                                        <h4>@message.Member.DerbyName</h4>
                                                    </a>
                                                }
                                                <span class="label label-danger">@message.Member.TotalForumPostsCount Posts</span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-xs-12 padding-top-10">
                                    @Html.Raw(message.MessageHTML)
                                    <span>
                                        <a class="btn btn-xs btn-warning"  onclick="MsgLike('@message.MessageId','@message.Member.MemberId','@message.ForumId','@message.TopicId')">
                                            <span id="L-@message.MessageId"><i class="fa fa-thumbs-o-up"></i> @message.MessageLike</span>
                                        </a>
                                    </span>
                                    <span>
                                        <a class="btn btn-xs btn-warning" onclick="MsgIAgree('@message.MessageId','@message.Member.MemberId','@message.ForumId','@message.TopicId')">
                                            <span id="A-@message.MessageId"><i class="fa fa-check"></i> @message.MessageIAgree</span>
                                        </a>
                                    </span>
                                </div>
                                <div class="col-xs-12 col-sm-7 col-md-6">
                                    <a href="@Url.Content("~/forum/post/view/" + Model.ForumId.ToString().Replace("-", "") + "/" + Model.TopicId + "#msg-" + message.MessageId)"><b>Posted</b> @message.Created.ToLongDateString() @message.Created.ToShortTimeString()</a>
                                </div>

                                <div class="col-xs-12 col-sm-5 col-md-6 text-right">
                                    @if (message.Member.MemberId == Model.CurrentMemberId)
                                    {
                                        <a class="btn btn-sm btn-default" href="@Url.Content("~/forum/post/edit/" + Model.ForumId.ToString().Replace("-", "") + "/" + message.MessageId)"><i class="fa fa-pencil"></i> Edit</a>
                                    }
                                    @if (Model.IsManagerOfTopic || message.Member.MemberId == Model.CurrentMemberId)
                                    {
                                        <button class="btn btn-sm btn-default" onclick="javascript:RemovePostOfForumTopic(this, '@message.MessageId')" type="button"><i class="fa fa-trash"></i> Delete</button>
                                    }
                                    <a class="btn btn-sm btn-default" href="@Url.Content("~/forum/post/quote/" + Model.ForumId.ToString().Replace("-", "") + "/" + Model.TopicId + "/" + message.MessageId)"><i class="fa fa-exclamation-circle"></i> Quote</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <table>
                                    <tr>
                                        <td>

                                        </td>
                                        <td>

                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-12">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                <div class="expandableContainer">
                    <br />
                    <div class="expandableCenterContainter">
                        <div class="expandableCenterContainterRight">
                           
                        </div>
                         <div class="divider"></div>
                        <div class="forumMessages">
                            @foreach (var message in Model.Messages)
                            {
                                <div id="msg-@message.MessageId">
                                    <div class="forumPostHead">
                                        <a href="@Url.Content("~/forum/post/view/" + Model.ForumId.ToString().Replace("-", "") + "/" + Model.TopicId + "#msg-" + message.MessageId)"><b>Posted</b> @message.Created.ToLongDateString() @message.Created.ToShortTimeString()</a>

                                        <div class="vmChanges">

                                            @if (message.Member.MemberId == Model.CurrentMemberId)
                                            {
                                                <span><a href="@Url.Content("~/forum/post/edit/" + Model.ForumId.ToString().Replace("-", "") + "/" + message.MessageId)">Edit</a> | </span>
                                            }
                                            @if (Model.IsManagerOfTopic || message.Member.MemberId == Model.CurrentMemberId)
                                            {
                                                <span class="spanLink" onclick="javascript:RemovePostOfForumTopic(this, '@message.MessageId')">Delete</span><span> | </span>
                                            }
                                            <span><a href="@Url.Content("~/forum/post/quote/" + Model.ForumId.ToString().Replace("-", "") + "/" + Model.TopicId + "/" + message.MessageId)">Quote</a></span>
                                        </div>

                                    </div>

                                    <div class="forumPostProfile">
                                        @if (message.Member.Photos.Where(x => x.IsPrimaryPhoto == true).FirstOrDefault() != null)
                                        {
                                            <img height="65px" alt="@message.Member.Photos.Where(x => x.IsPrimaryPhoto == true).FirstOrDefault().Alt" src="@message.Member.Photos.Where(x => x.IsPrimaryPhoto == true).FirstOrDefault().ImageUrl" />
                                        }
                                        else if (message.Member.Gender == RDN.Portable.Classes.Account.Enums.GenderEnum.Female)
                                        {
                                            <img height="65px" src="@Url.Content("~/content/roller-girl.jpg")" alt="roller derby girl" />
                                        }
                                        else
                                        {
                                            <img height="65px" src="@Url.Content("~/content/roller-person.gif")" alt="roller derby boy" />
                                        }
                                        <br />
                                        @if (Model.ForumType == RDN.Portable.Classes.Forum.Enums.ForumOwnerTypeEnum.league)
                                        {
                                            <a target="_blank" href="@Url.Content("~/member/" + message.Member.MemberId.ToString().Replace("-", "") + "/" + RDN.Utilities.Strings.StringExt.ToSearchEngineFriendly(message.Member.DerbyName))">
                                                @message.Member.DerbyName
                                            </a>
                                        }
                                        else
                                        {
                                            <a target="_blank" href="@Url.Content(RDN.Portable.Config.ServerConfig.WEBSITE_DEFAULT_LOCATION + "/roller-derby-skater/" + RDN.Utilities.Strings.StringExt.ToSearchEngineFriendly(message.Member.DerbyName) + "/" + message.Member.MemberId.ToString().Replace("-", ""))">
                                                @message.Member.DerbyName
                                            </a>
                                        }
                                        <div><span><b>Posts:</b> </span>@message.Member.TotalForumPostsCount</div>
                                    </div>
                                    <div class="forumPostMessage">
                                        <div class="formPostMessageContent">
                                            @Html.Raw(message.MessageHTML)
                                        </div>


                                        <div class=" messageLikeAgree">
                                            <span>
                                                <a class="spanLink" onclick="MsgLike('@message.MessageId','@message.Member.MemberId','@message.ForumId','@message.TopicId')">
                                                    <label class="LA" id="L-@message.MessageId">@message.MessageLike</label>
                                                </a>
                                            </span>
                                            <span>
                                                <a class="spanLink" onclick="MsgIAgree('@message.MessageId','@message.Member.MemberId','@message.ForumId','@message.TopicId')">
                                                    <label class="LA" id="A-@message.MessageId">@message.MessageIAgree</label>
                                                </a>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>

                        <div class="forumLinksRightBottom">
                            @if (!Model.IsLocked)
                            {
                                <a href="@Url.Content("~/forum/post/reply/" + @Model.ForumId.ToString().Replace("-", "") + "/" + @Model.TopicId.ToString().Replace("-", ""))">
                                    <img src="@Url.Content("~/Content/plus.png")" height="25px" />
                                    Reply To Post
                                </a>
                            }
                            else
                            {
                                <img alt="Topic is Locked" title="Topic is Locked" src="@Url.Content("~/Content/images/lock.png")" />
                            }
                            @if (!Model.IsWatching)
                            {
                                <span onclick="ForumPostToggleWatch(this)" class="spanLink" title="Sends email notifications when someone replies">
                                    <img src="@Url.Content("~/Content/images/icons/watch.png")" height="25px" />
                                    Watch
                                </span>
                            }
                            else
                            {
                                <span onclick="ForumPostToggleWatch(this)" class="spanLink" title="Sends email notifications when someone replies">
                                    <img src="@Url.Content("~/Content/images/icons/watch.png")" height="25px" />
                                    Stop Watching
                                </span>
                            }
                        </div>
                        <br />
                        <div>
                            < <a href="@Url.Content("~/forum/posts/" + Model.ForumType.ToString() + "/" + @Model.ForumId.ToString().Replace("-", "") + "/" + Model.GroupId)">
                                Back To @Model.ForumName
                            </a>
                        </div>
                        <div class="divider"></div>
                        <div>
                            <div>Members Unread</div>
                            <div class="forumPostInboxMember">
                                @foreach (var user in Model.TopicInbox)
                                {
                                    <span>
                                        <a target="_blank" href="@Url.Content("~/member/" + user.MemberId.ToString().Replace("-", "") + "/" + RDN.Utilities.Strings.StringExt.ToSearchEngineFriendly(user.DerbyName))">
                                            @user.DerbyName
                                        </a>,
                                    </span>
                                }
                            </div>

                        </div>
                    </div>
                    @Html.HiddenFor(x => x.TopicId)
                    @Html.HiddenFor(x => x.ForumId)
                </div>
                <script type="text/JavaScript">
                    AddPageViewToCount('@Model.ForumId', '@Model.TopicId');
                </script>
