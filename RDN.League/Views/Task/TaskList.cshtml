@model RDN.Library.Classes.League.TaskList.TaskListDA
@{
    ViewBag.Title = "Task List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Guid memId = RDN.Library.Classes.Account.User.GetMemberId();
    bool subPaid = RDN.Library.Cache.MemberCache.CheckIsLeagueSubscriptionPaid(memId);
}

<div class="fixedContainer">
    <div class="fixedlinksContainter">
        <div class="backLink">
        </div>
    </div>
    <div class="fixedCenterContainter">
        <div class="fixTitle">
            Task lists for the league 
        </div>

        <div class="titleDescription">
          Add and Manage your tasks here...
        </div>
        <div class="divider"></div>

        <div>
            @using (Html.BeginForm("TaskList", "Task", FormMethod.Post, new { @id = "addNewList" }))
            { 
                <table class="addForumPostTbl">
                    <tr>
                        <td class="b alRight">List Title:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.ListName)
                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">Task Dead Line:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(models => models.EndDate, new { @class = "jquery_datepicker" })

                        </td>
                    </tr>
                    <tr>
                        <td class="b alRight">Assign To:
                        </td>
                        <td class="largeInput">
                            @Html.TextBoxFor(x => x.AssignedTo)
                        </td>
                    </tr>
                    
                    <tr>
                        <td class="b alRight"></td>
                        <td class="largeInput">
                            <input type="submit" class="primary" value="Add List" name="addList" />

                        </td>
                    </tr>

                </table>
               
            }
        </div>
    </div>    
</div>
<script type="text/javascript">
    $("#addNewList").validate({
        rules: {
            ListName: "required",
            EndDate: "required"
        }
    });
    $('#EndDate').datepicker();
    
</script>

