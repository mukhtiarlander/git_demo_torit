@model RDN.Library.Classes.League.TaskList.TaskDA
@{
    ViewBag.Title = "View Task Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="fixedContainer">
    <div class="fixedlinksContainter">
        <div class="backLink">
            < <a  href="@Url.Content("~/tasks/league/list/view/" + Model.TaskListId + "/" + ViewBag.ListTitle)">All Tasks</a>
        </div>
    </div>
    <div class="fixedCenterContainter">
        <div class="fixTitle">
            Task Details
        </div>
        <div class="tvChanges">
            <div class="navIcons">
               @*  <a title="Delete this Task" href="@Url.Content("~/task/delete/" + Model.TaskId + "/" + Model.TaskListId + "/" + ViewBag.ListTitle)">
                        <img src="@Url.Content("~/Content/images/icons/delete.png")" />Delete
                    </a>*@
            </div>
        </div>
        <div class="titleDescription">
            Details
     
        </div>
        <div class="divider"></div>

        <div>
            <table class="addForumPostTbl">
                 <tr>
                    <td class="b alRight">Task Title:
                    </td>
                    <td class="vRTD">
                        @Model.Title
                    </td>
                </tr>
                <tr>
                    <td class="b alRight">Task Completed:
                    </td>
                    <td class="vRTD">
                        @Model.Completed%
                    </td>
                </tr>
                <tr>
                    <td class="b alRight">Started On:
                    </td>
                    <td class="vRTD">
                        @Model.StartDate.Value.ToShortDateString()
                    </td>
                </tr>
                    <tr>
                    <td class="b alRight">Ends On:
                    </td>
                    <td class="vRTD">
                        @Model.EndDate.Value.ToShortDateString()
                    </td>
                </tr>
             
                <tr>
                    <td class="b alRight">Dead Line:
                    </td>
                    <td class="vRTD">
                        @Model.DeadLine.Value.ToShortDateString()
                    </td>
                </tr>
                 <tr>
                    <td class="b alRight">Task Status:
                    </td>
                    <td class="vRTD">
                       @RDN.Utilities.Enums.EnumExt.ToFreindlyName((RDN.Portable.Classes.League.Enums.TaskStatusEnum)Model.StatusId)
                    </td>
                </tr>
               
                <tr>
                    <td class="b alRight">Task Notes:</td>
                    <td class="Details" style="width: 400px; max-width: 400px;">
                        @Html.Raw(Model.Notes)
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>