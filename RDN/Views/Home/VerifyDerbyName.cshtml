@using RDN.Models.Account
@model RegisterModel
@{
    ViewBag.Title = "Verify Your Derby Name";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="recoverPassContainer">
    <div class="page-header text-center">
        <h3>
            Connect To Your @System.Configuration.ConfigurationManager.AppSettings["SportName"] Profile
        </h3>
        <h4 class="signUpDesc">
            Connect With Your @System.Configuration.ConfigurationManager.AppSettings["SportName"] Profile Already On @System.Configuration.ConfigurationManager.AppSettings["WebsiteName"]
        </h4>
    </div>
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
            if (Model != null && Model.Errors != null && Model.Errors.Count > 0)
            {
                <p>
                    @foreach (var error in Model.Errors)
                    {
                        <span style="color: red;">@error</span><br />
                    }
                </p>
            }
            <div>
                <fieldset>

                    <div class="form-group">
                        <img class="displayNone floatLeft" id="loadingDerbyName" src="@Url.Content("~/Content/loading_lg.gif")" />
                        @Html.LabelFor(m => m.DerbyName)

                        @Html.DisplayFor(m => m.DerbyName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        <span style="color: red;">@Html.ValidationMessageFor(m => m.Email)</span>
                    </div>
                    @if (Model.EmailVerify != null)
                    {
                        <div>
                            Records show that the Email ends with <b>@Model.EmailVerify</b>
                        </div>
                    }
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        <span style="color: red;">@Html.ValidationMessageFor(m => m.Password)</span>
                    </div>
                    <div class="form-group">
                        <input class="primary btn btn-primary" type="submit" value="Sign Up" />
                    </div>
                    <div class="form-group">
                        If there are any errors with this information, please feel free to contact us at
                        <a href="mailto:info@rdnation.com">info@rdnation.com</a>
                    </div>
                    @Html.HiddenFor(x => x.MemberId)
                </fieldset>
            </div>
        }
    </div>
</div>
