@model RDN.Portable.Classes.Games.Officiating.RequestDA
           @using RDN.Portable.Classes.Controls.Message.Enums
@{
    ViewBag.Title = "Request Details";
    Layout = "~/Views/Shared/_LayoutAbout.cshtml";
}
<ol class="breadcrumb">
    <li><a href="@RDN.Utilities.Config.ConfigManager.InternalSite">Home</a></li>
    <li class="active">Officiating Request Details</li>
</ol>
<div class="row margin-bottom-10">
    <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-12 col-sm-7">
                        <h3 class="margin-top-10"><i class="fa fa-ticket"></i> Officiating Request Details</h3>
                    </div>
                    <div class="col-xs-12 col-sm-5 text-right">
                        <a class="btn btn-default btn-sm margin-top-5" href="@Model.UrlToContact">
                            <i class="fa fa-envelope"></i> Contact
                        </a>
                        <a class="btn btn-default btn-sm margin-top-5" href="@Model.UrlToRequest"><i class="fa fa-plus"></i> Add New Request</a>
                    </div>
                </div>
            </div>
            <div class="panel-body no-padding-bottom">
                <div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label>Teams Playing:</label>
                            <div>
                                @Model.TeamsPlaying
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label>Date:</label>
                            <div>
                                @Model.Date.Value.ToShortDateString()
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label>First Whistle:</label>
                            <div>
                                @Model.FirstWhistle
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label> Location Name:</label>
                            <div>
                                @Model.LocationName
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label>Adress:</label>
                            <div>
                                @Model.LocationName
                                @if (!String.IsNullOrEmpty(Model.Address))
                                {
                                <div>
                                    @Model.Address
                                </div>
                                }
                                @if (!String.IsNullOrEmpty(Model.Address1))
                                { <div>
                                    @Model.Address1
                                </div>
                                }
                                <div>
                                    @if (!String.IsNullOrEmpty(Model.City))
                                    {
                                    @Model.City<span>,</span>
                                    }
                                    @if (!String.IsNullOrEmpty(Model.State))
                                    {
                                    @Model.State<span> </span>
                                    }
                                    @if (!String.IsNullOrEmpty(Model.Zip))
                                    {
                                    @Model.Zip
                                    }
                                </div>
                                <div>
                                    @if (!String.IsNullOrEmpty(Model.Country))
                                    {
                                    @Model.Country
                                    }
                                    <a class="btn btn-xs btn-default margin-top-5" href="http://www.bing.com/maps/default.aspx?q=@Model.Address+@Model.Address1,+@Model.City,+@Model.State+@Model.Zip+@Model.Country" target="_blank"><i class="fa fa-map-marker"></i> View Map</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 margin-bottom-10">
                            <label>
                                Is Regulation: @if (Model.IsRegulation) { <i class="fa fa-check-circle"></i> } else { <i class="fa fa-times-circle-o"></i> }
                            </label>
                        </div>
                        <div class="col-xs-12 col-sm-6 margin-bottom-10">
                            <label>
                                Evaluations Provided: @if (Model.EvaluationsProvided) { <i class="fa fa-check-circle"></i> } else { <i class="fa fa-times-circle-o"></i> }
                            </label>
                        </div>
                        <div class="col-xs-12 col-sm-6 margin-bottom-10">
                            <label>
                                Snacks Provided?: @if (Model.IsSnacksProvided) { <i class="fa fa-check-circle"></i> } else { <i class="fa fa-times-circle-o"></i> }
                            </label>
                        </div>
                        <div class="col-xs-12 col-sm-6 margin-bottom-10">
                            <label>
                                Reimbursement?: @if (Model.IsReimbursement) { <i class="fa fa-check-circle"></i> } else { <i class="fa fa-times-circle-o"></i> }
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label>
                                Referees needed?:
                            </label>
                            <div>
                                @Model.NoRefNeded
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label>
                                Non Officials needed?:
                            </label>
                            <div>
                                @Model.NonsoNeded
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label>
                                Stipend for Refs:
                            </label>
                            <div>
                                @Model.TravelStipendForRefs
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label>
                                Stipend for NSOs:
                            </label>
                            <div>
                                @Model.TravelStipendForNSO
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label>
                                Select Rule Set:
                            </label>
                            <div>
                                @RDN.Utilities.Enums.EnumExt.ToFreindlyName((RDN.Portable.Classes.Federation.Enums.RuleSetsUsedEnum)Model.RuleSetId)
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 margin-bottom-15">
                            <label>
                                Description:
                            </label>
                            <div>
                                @Html.Raw(Model.Description)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>