@{
    ViewBag.Title = "All " + RDN.Library.Classes.Config.LibraryConfig.SportName + " " + RDN.Library.Classes.Config.LibraryConfig.NameOfMembers + " World Wide";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header text-center">
    <h2>   <span data-bind="text: MembersCount"></span> @RDN.Library.Classes.Config.LibraryConfig.SportName @RDN.Library.Classes.Config.LibraryConfig.NameOfMembers and Referees World Wide</h2>
</div>
<div class="col-sm-offset-3 col-sm-6 col-xs-12">
    <div class="input-group">
        <input type="text" class="form-control" id="searchBox" data-bind="val: SearchText" onkeyup="MemberViewModel.SearchMembers(this)" placeholder="Search">
        <span class="input-group-btn">
            <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
        </span>
    </div><!-- /input-group -->
    
</div>

<div class="clearfix"></div>
<br />
<div id="skaters-grid" data-bind="foreach: Members">

    <div class="col-sm-4 col-md-3 col-lg-2 skaters-grid-item">
        <div class="thumbnail bg-lighter">

            <a data-bind=" attr: {href: DerbyNameUrl}">

                <img alt="" data-bind="attr:{ src: ThumbUrl}" />

            </a>
            <div class="caption">
                <p>
                    <a data-bind=" attr: {href: DerbyNameUrl}" class="fs14">
                        <span data-bind="text: DerbyName " class="fw600"></span>
                    </a><span data-bind="text: (DerbyNumber)" class="label label-success pull-right"></span>
                </p>
                <a data-bind="if: LeagueUrl, attr: {href: LeagueUrl}" class="fs12">
                    <span data-bind="text: LeagueName"></span>
                </a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        ko.applyBindings(MemberViewModel);
        MemberViewModel.LoadMemberStats();
        MemberViewModel.LoadMemberList('@RDN.Library.Classes.Config.LibraryConfig.ListLoadingCount');
    });
</script>
