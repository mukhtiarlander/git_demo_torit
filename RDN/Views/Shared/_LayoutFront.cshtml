                </div>

                <div class="item">
                    <img src="@Url.Content("~/Content/ImageSlides/images/17.jpg")" alt="Groups, Teams and Committee Management - @RDN.Library.Classes.Config.LibraryConfig.SportName On Film" />
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/ImageSlides/images/18.jpg")" alt="Live Games Online, @RDN.Library.Classes.Config.LibraryConfig.WebsiteShortName Scoreboard - PhilosoFear" />
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/ImageSlides/images/11.jpg")" alt="Forums For Communicating - Roller Derby On Film" />
                    <div class="carousel-caption">
                    </div>
                </div>

            </div>
            <div class="text-center col-sm-12 ontopCarousel">
                <h1 id="tagline" class="text-uppercase text-jumbo white ">
                    @RDN.Library.Classes.Config.LibraryConfig.WebsiteName

                    <br />
                    <small class="white text-lowercase">
                        @RDN.Library.Classes.Config.LibraryConfig.WebsiteSlogan
                    </small>
                </h1>
                @if (!User.Identity.IsAuthenticated) { 
                <div class="affix-bottom">
                    <a href="@Url.Content("~/signup")" class="btn btn-success btn-lg">Sign Me Up</a>
                </div>
                }
                else { 

                <div class="affix-bottom">
                    <a href="@RDN.Library.Classes.Config.LibraryConfig.InternalSite" class="btn btn-success btn-lg">Take Me To My League</a>
                </div>
                }
            </div>
        </div>

        @Html.Raw(MessageHelper.PrintMessages(((List<RDN.Library.Util.SiteMessage>)TempData["Messages"])))
        @RenderBody()


