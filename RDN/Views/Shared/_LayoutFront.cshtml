            <div class="carousel-inner" role="listbox" style="max-height:500px; overflow:hidden;">
                <div class="item">
                    <img src="@Url.Content("~/Content/ImageSlides/images/13.jpg")" alt="Roster Management - Hanson Images" />
                    <div class="carousel-caption">
                    </div>
                </div>
