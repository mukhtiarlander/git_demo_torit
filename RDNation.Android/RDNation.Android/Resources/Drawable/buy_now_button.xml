<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true" >
		<shape>
			<gradient
                android:startColor="@color/purplelight"
                android:endColor="@color/purple"
                android:angle="270" />
			<stroke
                android:width="1dp"
                android:color="@color/purpledark" />
			<corners
                android:radius="3dp" />
			<padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
		</shape>
	</item>

	<item android:state_focused="true" >
		<shape>
			<gradient
                android:endColor="@color/purplelight"
                android:startColor="@color/purple"
                android:angle="270" />
			<stroke
                android:width="1dp"
                android:color="@color/purpledark" />
			<corners
                android:radius="3dp" />
			<padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
		</shape>
	</item>

	<item>
		<shape>
			<gradient
                android:endColor="@color/purplelight"
                android:startColor="@color/purple"
                android:angle="270" />
			<stroke
                android:width="1dp"
                android:color="@color/purpledark" />
			<corners
                android:radius="3dp" />
			<padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
		</shape>
	</item>
</selector>